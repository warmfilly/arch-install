#!/bin/bash

INSTALL="sudo pacman -S --noconfirm"

sudo sed -i "/\[multilib\]/,/Include/"'s/^#//' /etc/pacman.conf # Enable the multilib repository in /etc/pacman.conf (steam is located in multilib)

sudo pacman -Syu --noconfirm

$INSTALL  base-devel
git clone https://aur.archlinux.org/yay-git.git
cd yay-git
makepkg -si --noconfirm
cd ~

$INSTALL steam virtualbox-host-modules-arch virtualbox alacritty vim xorg-server sddm plasma-desktop bitwarden neofetch neochat qtox firefox ranger rsync go
yay -S --noconfirm megasync vscodium-bin pyenv

sudo systemctl enable sddm.service

echo "Installation complete. Reboot when ready"
