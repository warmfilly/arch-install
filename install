#!/bin/bash

sudo sed -i "/\[multilib\]/,/Include/"'s/^#//' /etc/pacman.conf # Enable the multilib repository in /etc/pacman.conf (steam is located in multilib)

sudo pacman -Syu --noconfirm

$INSTALL  base-devel
git clone https://aur.archlinux.org/yay-git.git
cd yay-git
makepkg -si --noconfirm
cd ~

# Should I add nodejs?
sudo pacman -S --noconfirm  steam virtualbox-host-modules-arch virtualbox alacritty vim xorg sddm plasma-desktop bitwarden neofetch neochat qtox firefox ranger rsync go tldr wine vlc mpv yt-dlp libappindicator-gtk3 gnome-shell-extension-appindicator thunar
yay -S --noconfirm megasync vscodium-bin pyenv protonvpn

sudo systemctl enable sddm.service

echo "Installation complete. Reboot when ready"
